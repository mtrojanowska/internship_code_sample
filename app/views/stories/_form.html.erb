<h3>New story</h3>
<%= form_with model: @story, local: true do |f| %>

  <%= render 'shared/error', model: @story %>

  <%= f.label :image %><br>
  <%= f.file_field :image %><br>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.hidden_field :writer_id, value: current_writer.id %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br>

  <%= f.submit "Create a story" %>

<% end %>
